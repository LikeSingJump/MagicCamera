<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define PopupWindow Animation Style -->
    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/popup_fade_out</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.MagicCameraActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/DayBG</item>
        <item name="colorPrimaryVariant">#747d8c</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/DayText</item>
        <item name="colorSecondaryVariant">#969696</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>


