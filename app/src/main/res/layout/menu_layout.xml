<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/logo"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>


    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textColor="?attr/colorSecondary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:maxLines="3"
        android:fontFamily="@font/profile"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="example@email.com"
        android:textColor="?attr/colorSecondary"
        android:fontFamily="@font/profile"
        android:maxLines="3"
        android:layout_marginStart="25dp"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="90dp"
        android:alpha="0.7"
        app:dividerThickness="1dp">

    </com.google.android.material.divider.MaterialDivider>


    <top.defaults.view.TextButton
        android:id="@+id/nav_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_home_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/regular"
        android:paddingStart="26dp"
        android:paddingTop="16dp"
        android:paddingEnd="130dp"
        android:paddingBottom="16dp"
        android:text="Home"
        android:textSize="16sp"
        app:backgroundEffect="ripple"
        app:defaultTextColor="#969696"
        app:textEffect="animateColorAndSize" />


    <top.defaults.view.TextButton
        android:id="@+id/nav_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_settings_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/regular"
        android:padding="16dp"
        android:paddingStart="26dp"
        android:paddingTop="16dp"
        android:paddingEnd="115dp"
        android:paddingBottom="16dp"
        android:text="Settings"
        android:textSize="16sp"
        app:backgroundEffect="ripple"
        app:defaultTextColor="#969696"
        app:textEffect="animateColorAndSize" />


    <top.defaults.view.TextButton
        android:id="@+id/nav_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_share_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/regular"
        android:padding="16dp"
        android:paddingStart="26dp"
        android:paddingTop="16dp"
        android:paddingEnd="135dp"
        android:paddingBottom="16dp"
        android:text="Share"
        android:textSize="16sp"
        app:backgroundEffect="ripple"
        app:defaultTextColor="#969696"
        app:textEffect="animateColorAndSize" />


    <top.defaults.view.TextButton
        android:id="@+id/nav_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_info_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/regular"
        android:padding="16dp"
        android:paddingStart="26dp"
        android:paddingTop="16dp"
        android:paddingEnd="109dp"
        android:paddingBottom="16dp"
        android:text="About Us"
        android:textSize="16sp"
        app:backgroundEffect="ripple"
        app:defaultTextColor="#969696"
        app:textEffect="animateColorAndSize" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="30dp"
        android:alpha="0.7"
        app:dividerThickness="1dp">

    </com.google.android.material.divider.MaterialDivider>


    <top.defaults.view.TextButton
        android:id="@+id/nav_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_logout_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/regular"
        android:padding="16dp"
        android:paddingStart="26dp"
        android:paddingTop="16dp"
        android:paddingEnd="125dp"
        android:paddingBottom="16dp"
        android:text="Logout"
        android:textSize="16sp"
        app:backgroundEffect="ripple"
        app:defaultTextColor="#969696"
        app:textEffect="animateColorAndSize" />


</LinearLayout>
